                <Button android:layout_width="@dimen/defaultButtonWidthDailyView" android:layout_height="match_parent"
                        android:textColor="@color/buttonTextColor"
                        android:background="@drawable/my_button_bg"
                        android:text="@string/Fach" android:id="@+id/btnLessonSevenLesson"/>
                <Button android:layout_width="@dimen/defaultButtonWidthDailyView" android:layout_height="match_parent"
                        android:textColor="@color/buttonTextColor"
                        android:background="@drawable/my_button_bg"
                        android:text="@string/Lehrer" android:id="@+id/btnLessonSevenTeacher"/>
                <Button android:layout_width="@dimen/defaultButtonWidthDailyView" android:layout_height="match_parent"
                        android:textColor="@color/buttonTextColor"
                        android:background="@drawable/my_button_bg"
                        android:text="@string/Raum" android:id="@+id/btnLessonSevenRoom"/>
                <Button android:layout_width="@dimen/defaultButtonWidthDailyView" android:layout_height="match_parent"
                        android:textColor="@color/buttonTextColor"
                        android:background="@drawable/my_button_bg"
                        android:text="@string/Woche" android:id="@+id/btnLessonSevenPeriod"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="@dimen/defaultLayoutHeightDailyView"
                          android:layout_gravity="center_horizontal" android:weightSum="1">
                <LinearLayout android:orientation="vertical" android:layout_width="@dimen/layoutTimeWidth"
                              android:background="@drawable/my_button_bg"
                              android:layout_height="match_parent">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="07:00" android:id="@+id/tvStartLessonEight"
                              android:textColor="@color/black"
                              android:layout_marginTop="@dimen/layoutTimeTopMargin"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="07:00" android:id="@+id/tvEndLessonEight"
                              android:textColor="@color/black"
                              android:layout_marginTop="@dimen/layoutTimeTopMargin"/>
                </LinearLayout>
                <Button android:layout_width="@dimen/defaultButtonWidthDailyView" android:layout_height="match_parent"

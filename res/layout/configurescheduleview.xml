                        android:textColor="@color/buttonTextColor"
                        android:background="@drawable/my_button_bg"
                        android:text="@string/Lehrer" android:id="@+id/btnLessonEightTeacher"/>
                <Button android:layout_width="@dimen/defaultButtonWidthDailyView" android:layout_height="match_parent"
